{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "error",
    "@typescript-eslint/no-unused-expressions": "error",
    "react/no-unescaped-entities": "error"
  },
  "ignorePatterns": [
    "**/node_modules/**",
    "**/.next/**",
    "**/dist/**",
    "**/build/**",
    "**/.prisma/**",
    "**/generated/**",
    "**/*.generated.*",
    "prisma/client/**"
  ],
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  }
} 